<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name></display-name>
  
  <!-- 过滤器解决中文乱码问题 -->
  <filter>
  	<filter-name>FilterEncoding</filter-name>
  	<filter-class>com.cnu.leavesys.filter.FilterEncoding</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>FilterEncoding</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <servlet>
    <servlet-name>UserMgr</servlet-name>
    <servlet-class>com.cnu.leavesys.controller.UserMgr</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>StudentMgr</servlet-name>
    <servlet-class>com.cnu.leavesys.controller.StudentMgr</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TeacherMgr</servlet-name>
    <servlet-class>com.cnu.leavesys.controller.TeacherMgr</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>UserMgr</servlet-name>
    <url-pattern>/UserMgr</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StudentMgr</servlet-name>
    <url-pattern>/StudentMgr</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TeacherMgr</servlet-name>
    <url-pattern>/TeacherMgr</url-pattern>
  </servlet-mapping>	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
